<h1> <%= @user.to_s %>

<% if @user.id == current_user.id || current_user.admin == true %>
  <%= link_to 'Update Profile', edit_user_path(@user), class:"btn btn-success btn-md" %>
<% end %>
</h1>
<div class="well">
  <img src= <%= @user.picture_url %> alt="Profile picture" height="200">
  <h3> <%= @user.age %>, <%= @user.gender %> </h3>
  <h3> City: <%= @user.city %> </h3>
  <h3> Height: <%= @user.feet_height %> </h3>
  <h3>Interested In:</h3>
  <ul>
  <% if @user.genderqueer == true %>
  <li><%= "non-binary"  %></li>
  <% end %>

  <% if @user.men == true %>
  <li> <%= "men"  %></li>
  <% end %>

    <% if @user.women == true %>
    <li><%= "women"  %> </li>
    <% end %>
  </ul>
  <%= render "likebutton" %>
  <%= render "unlikebutton" %>
</div>

<div class="row">
  <div class="col-md-1">
    <% if @user == current_user || current_user.admin %>
    <%= link_to "Delete Account", delete_user_path(@user), method: :delete, class: "btn btn-danger btn-md",  data: {confirm: 'Are you sure? This is not reversible'} %>
    <% end %>
  </div>
  
  <div class="col-md-1">
    <% if @user == current_user %>
    <%= link_to "Log Out", logout_path, method: :delete, class: "btn btn-danger btn-md",  data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div>


  <div class="col-md-10">

  </div>
</div>
