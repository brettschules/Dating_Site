<h1>Plan a New Event</h1>
<div class="well">

<h3>All fields required</h3>

<%= form_for (@event) do |f| %>
<br>
<div class="field">
  <%= f.label :name, "Event Name:" %><br>
  <%= f.text_field :name %><br>
</div>

<br>

<div class="field">
  <%= f.label :location, "Location:" %><br>
  <%= f.text_field :location %><br>
</div>

<br>

<div class="field">
  <%= f.label :date, "Date and Time:" %><br>
  <%= f.datetime_local_field :date %><br>
</div>

<br>

<div class="field">
  <%= f.label :category, "Pick a Category:" %><br>
  <%= f.select :category, ['Speed Dating', 'Group Date', 'Concert', 'Dinner', 'Brunch', 'Theater', 'Afterhours Party', 'Overnight Trip', 'Adventure'] %><br>
</div>

<br>

<div class="field">
  <%= f.label :description, "Event Description:" %><br>
  <%= f.text_field :description %><br>
</div>

<br>

<div class="field">
  <%= f.label :image_url, "Event image url:" %><br>
  <%= f.text_field :image_url %><br>
</div>

<br>


<div class="actions">
  <%= f.submit "Create event", :class=>"btn btn-success btn-md"%>
</div>

<% end %>

</div>
